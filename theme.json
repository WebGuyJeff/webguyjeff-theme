{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"customTemplates": [
		{ "name": "page-full-width", "title": "Page: Full-width", "postTypes": [ "page" ] },
		{ "name": "page-no-header", "title": "Page: No Header", "postTypes": [ "page" ] },
		{ "name": "page-no-title", "title": "Page: No Title", "postTypes": [ "page" ] },
		{ "name": "page-with-hero", "title": "Page: Hero Banner", "postTypes": [ "page" ] },
		{ "name": "archive-service", "title": "Archive: Service Posts" },
		{ "name": "archive-review", "title": "Archive: Review Posts" },
		{ "name": "category-partners", "title": "Category: Partners" },
		{ "name": "single-review", "title": "Single: Review", "postTypes": [ "review" ] },
		{ "name": "single-service", "title": "Single: Service", "postTypes": [ "service" ] },
		{ "name": "single-partners", "title": "Single: Partners Category", "postTypes": [ "post" ] }
	],
	"templateParts": [
		{ "name": "header", "title": "Header", "area": "header" },
		{ "name": "footer", "title": "Footer", "area": "footer" }
	],
	"settings": {
		"appearanceTools": true,
		"color": {
            "custom": true,
            "customGradient": true,
            "link": true,
			"defaultDuotone": false,
			"defaultPalette": false,
			"defaultGradients": false,
			"duotone": [
				{
					"colors": ["#111111", "#ffffff"],
					"slug": "duotone-1",
					"name": "Black and white"
				},
				{
					"colors": ["#111111", "#C2A990"],
					"slug": "duotone-2",
					"name": "Black and sandstone"
				},
				{
					"colors": ["#111111", "#D8613C"],
					"slug": "duotone-3",
					"name": "Black and rust"
				},
				{
					"colors": ["#111111", "#B1C5A4"],
					"slug": "duotone-4",
					"name": "Black and sage"
				},
				{
					"colors": ["#111111", "#B5BDBC"],
					"slug": "duotone-5",
					"name": "Black and pastel blue"
				}
			],
			"gradients": [
                {
                    "slug": "mysterion",
                    "gradient": "radial-gradient(circle at 100% 100%,#0c4 20%,#497fb1 80%)",
                    "name": "Mysterion (radial)"
                }
			],
			"palette": [
				{ "slug": "wgj-bg","color":"#f8f801","name":"Theme Background"},
				{ "slug": "wgj-fg","color":"#000","name":"Theme Foreground"},
				{ "slug": "wgj-bg-alt","color":"#000","name":"Theme Background Alt"},
				{ "slug": "wgj-fg-alt","color":"#fff","name":"Theme Foreground Alt"},
				{ "slug": "wgj-accent","color":"#ff1e5f","name":"Theme Accent"},
				{ "slug": "wgj-green","color":"#02ddbb","name":"Theme Green"},
				{ "slug": "wgj-blue","color":"#00c1fd","name":"Theme Blue"},
				{ "slug": "wgj-pink","color":"#d814d4","name":"Theme Pink"}
			]
		},
		"typography": {
			"defaultFontSizes": false,
            "customFontSize": true,
			"lineHeight": true,
			"textColumns": true,
			"writingMode": true,
			"fontFamilies": [
				{
					"fontFamily": "'Open Sans', Arial, sans-serif",
					"name": "Open Sans",
					"slug": "body",
					"fontFace": [
						{
							"fontFamily": "'Open Sans'",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "300 800",
							"src": [
								"file:./assets/fonts/Open_Sans/OpenSans-VariableFont_wdth,wght.ttf"
							]
						},
						{
							"fontFamily": "'Open Sans'",
							"fontStretch": "normal",
							"fontStyle": "italic",
							"fontWeight": "300 800",
							"src": [
								"file:./assets/fonts/Open_Sans/OpenSans-Italic-VariableFont_wdth,wght.ttf"
							]
						}
					]
				},
				{
					"fontFamily": "Inter, Arial, sans-serif",
					"name": "Inter",
					"slug": "heading",
					"fontFace": [
						{
							"fontFamily": "Inter",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 900",
							"src": [
								"file:./assets/fonts/Inter/Inter-VariableFont_slnt,wght.ttf"
							]
						}
					]
				},
				{
					"fontFamily": "'Metal Mania', Papyrus, fantasy",
					"name": "Metal Mania",
					"slug": "metal-mania",
					"fontFace": [
						{
							"fontFamily": "Metal Mania",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": [
								"file:./assets/fonts/Metal_Mania/MetalMania-Regular.ttf"
							]
						}
					]
				}
			],
			"fontSizes": [
				{ "name": "X-Small", "size": "0.85rem", "slug": "x-small" },
				{ "name": "Small Base", "size": "1rem", "slug": "small" },
				{ "name": "Medium H6", "size": "1.25rem", "slug": "medium" },
				{ "name": "Large H5", "size": "1.5rem", "slug": "large" },
				{ "name": "X-Large H4", "size": "1.75rem", "slug": "x-large" },
				{ "name": "XX-Large H3", "size": "2rem", "slug": "xx-large" },
				{ "name": "XXX-Large H2", "size": "2.5rem", "slug": "xxx-large" },
				{ "name": "XXXX-Large H1", "size": "3.5rem", "slug": "xxxx-large" },
				{ "name": "Display Small", "size": "5rem", "slug": "display-small" },
				{ "name": "Display Medium", "size": "7rem", "slug": "display-medium" },
				{ "name": "Display Large", "size": "9.5rem", "slug": "display-large" },
				{ "name": "Display X-Large", "size": "12.5rem", "slug": "display-x-large" }
			]
		},
		"layout": {
			"contentSize": "35rem",
			"wideSize": "70rem"
		},
		"useRootPaddingAwareAlignments": true,
		"spacing": {
			"customSpacingSize": true,
			"defaultSpacingSizes": false,
			"padding": true,
			"margin": true,
			"blockGap": true,
			"units": [ "em", "rem", "vh", "vw", "%" ],
			"spacingSizes": [
				{ "name": "1 (0.5rem)", "slug": "20", "size": "0.5rem" },
				{ "name": "2 (1rem)", "slug": "30", "size": "1rem" },
				{ "name": "3 (2rem)", "slug": "40", "size": "2rem" },
				{ "name": "4 (3.5rem)", "slug": "50", "size": "3rem" },
				{ "name": "5 (6rem)", "slug": "60", "size": "5rem" },
				{ "name": "6 (0.75rem)", "slug": "70", "size": "8rem" },
				{ "name": "7 (10rem)", "slug": "80", "size": "12rem" }
			]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"shadow": {
			"defaultPresets": false,
			"presets": [
				{ "name": "Tight", "slug": "theme-tight", "shadow": "0 0.08rem 0.1em 0 #000, 0 0.15rem 0.3rem 0.15rem #0004" },
				{ "name": "Small", "slug": "theme", "shadow": "0 0.25rem 0.5em 0.25rem #0006,0 0.125rem 0.25rem 0.125rem #0006" },
				{ "name": "Soft", "slug": "theme-soft", "shadow": "0 1px 1px rgba(0,0,0,0.12), 0 2px 2px rgba(0,0,0,0.12), 0 4px 4px rgba(0,0,0,0.12), 0 8px 8px rgba(0,0,0,0.12), 0 16px 16px rgba(0,0,0,0.12)" },
				{ "name": "Soft Upward", "slug": "theme-soft-up", "shadow": "0 -1px 1px rgba(0,0,0,0.12), 0 -2px 2px rgba(0,0,0,0.12), 0 -4px 4px rgba(0,0,0,0.12), 0 -8px 8px rgba(0,0,0,0.12), 0 -16px 16px rgba(0,0,0,0.12)" },
				{ "name": "Inset", "slug": "theme-inset", "shadow": "inset -0.1rem 0.2rem 0.5rem 0.2rem #000c" },
				{ "name": "Hard Offset Small", "slug": "hard-offset-small", "shadow": "0.25rem 0.25rem 0 var(--wp--preset--color--wgj-blue)" },
				{ "name": "Hard Offset Large", "slug": "hard-offset-large", "shadow": "0.5rem 0.5rem 0 var(--wp--preset--color--wgj-blue)" }
			]
		},
		"dimensions": { "minHeight": true },
		"position": { "sticky": true },
		"custom": {
			"body-class": "wgj-theme-default",
			"fluid-root": "var(--wgj--fluid-root)",
			"gutter": {
				"small": "var( --wp--preset--spacing--40 )",
				"medium": "clamp( var( --wp--preset--spacing--50 ), 4vw, var( --wp--preset--spacing--60 ) )",
				"large": "var( --wp--preset--spacing--70 )",
				"x-large": "var( --wp--preset--spacing--80 )"
			},
			"border-size": "0.1875rem",
			"border-radius": {
				"small": "0.5rem",
				"medium": "1rem",
				"large": "2rem"
			},
			"padding-page": "var( --wp--custom--gutter--medium )",
			"transition": { "hover-time": "0.15s" }
		},
		"blocks": {
			"core/group": {
				"spacing": {
					"margin": true,
					"padding": true,
					"blockGap": true
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--wgj-bg)",
			"text": "var(--wp--preset--color--wgj-fg)"
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--small)",
			"fontFamily": "var(--wp--preset--font-family--body)",
			"fontWeight": "400",
			"lineHeight": "1.6"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--50)",
			"padding": {
				"top": "0",
				"bottom": "0",
				"right": "var(--wp--custom--padding-page)",
				"left": "var(--wp--custom--padding-page)"
			}
		},
		"elements": {
			"button": {
				"color": { "background": "var(--wp--preset--color--wgj-accent)", "text": "var(--wp--preset--color--wgj-fg-alt)" }
			},
			"link": { "color": { "text": "inherit" } },
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontWeight": "900",
					"lineHeight": "1.3"
				}
			},
			"h1": { "typography": { "fontSize": "var(--wp--preset--font-size--xxxx-large)" } },
			"h2": { "typography": { "fontSize": "var(--wp--preset--font-size--xxx-large)" } },
			"h3": { "typography": { "fontSize": "var(--wp--preset--font-size--xx-large)" } },
			"h4": { "typography": { "fontSize": "var(--wp--preset--font-size--x-large)" } },
			"h5": { "typography": { "fontSize": "var(--wp--preset--font-size--large)" } },
			"h6": { "typography": { "fontSize": "var(--wp--preset--font-size--medium)" } }
		},
		"blocks": {
			"core/buttons": { "spacing": { "blockGap": "var(--wp--custom--gutter--small)" } },
			"core/button": {
				"color": { "background": "var(--wp--preset--color--wgj-accent)", "text": "var(--wp--preset--color--wgj-fg-alt)" },
				"border": { "radius": "var(--wp--custom--border-radius--small)", "width": "0" },
				"variations": {
					"outline": {
						"color": { "background": "#0000", "text": "currentColor" },
						"border": { "width": "var(--wp--custom--border-size)", "color": "currentColor" }
					}
				}
			},
			"core/comment-author-name": { "typography": { "fontSize": "var(--wp--preset--font-size--medium)" } },
			"core/comment-content": {
				"border": { "radius": "var(--wp--custom--border-radius--small)" },
				"color": { "background": "var(--wp--preset--color--wgj-bg-alt)" }
			},
			"core/comment-date": {
				"typography": {
					"textTransform": "uppercase",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"textTransform": "uppercase",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-reply-link": {
				"typography": { "textTransform": "uppercase" },
				"elements": {
					"link": {
						"typography": { "fontSize": "var(--wp--preset--font-size--small)" },
						"color": { "text": "var(--wp--preset--color--wgj-accent)" }
					}
				}
			},
			"core/group": {
				"spacing": { "blockGap": "var(--wp--preset--spacing--50)" }
			},
			"core/columns": {
				"spacing": { "blockGap": "var(--wp--preset--spacing--50)" }
			},
			"core/post-template": {
				"spacing": { "blockGap": "var(--wp--preset--spacing--50)" }
			},
			"core/navigation": { "spacing": { "blockGap": "var(--wp--custom--gutter--small)" } },
			"core/quote": { "typography": { "fontSize": "var(--wp--preset--font-size--x-large)" } },
			"core/search": { "border": { "radius": "var(--wp--custom--border-radius--small)" } },
			"core/code": {
				"typography": { "fontFamily": "monospace" },
				"color": { "text": "#8ebff5", "background": "#222" },
				"spacing": { "padding": { "bottom": "var(--wp--preset--spacing--50)", "left": "var(--wp--preset--spacing--30)", "right": "var(--wp--preset--spacing--30)", "top": "var(--wp--preset--spacing--50)" } },
				"shadow": "var(--wp--preset--shadow--theme-inset)"
			},
			"core/table": {
				"css": "border-color:var(--wp--preset--color--wgj-fg); border-bottom: solid 0.25rem; & th{ color:var(--wp--preset--color--wgj-bg); background:var(--wp--preset--color--wgj-fg); border: 0px; } & td{ border: 0px; } & tr:nth-child(even){ background: #fff1; }",
				"color": { "text": "var(--wp--preset--color--wgj-fg)" }
			}
		}
	}
}
